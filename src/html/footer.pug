footer.footer.mt-5.py-5
	.container
		.row
			.col-12.text-center.col-sm-3.text-sm-start.col-md-4.col-lg-6.col-xxl-8
				a.footer__logo.navbar-brand.m-0(href='#' title="Логотип компании" data-animation='slide-right')
					include ../img/icons/logo.svg



			.col-12.col-sm-9.col-md-8.col-lg-6.col-xxl-4
				nav.footer__nav.text-center(data-animation='slide-left')
					ul.list-style-none.my-4.m-sm-0.d-sm-flex.flex-sm-wrap.justify-content-sm-end.justify-content-md-between
						li.nav-item
							a.nav-link(href='#request')
								span Оставить заявку
						li.nav-item
							a.nav-link(href='#about')
								span О компании
						li.nav-item
							a.nav-link(href='#contacts')
								span Контакты

